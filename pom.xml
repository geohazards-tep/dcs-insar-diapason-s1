<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <groupId>com.terradue</groupId>
  <artifactId>dcs-insar-diapason-s1</artifactId>
  <packaging>pom</packaging>
  <name>dcs-insar-diapason-s1</name>
  <parent>
    <groupId>com.terradue</groupId>
    <artifactId>dcs-bash-parent</artifactId>
    <version>3.0.0-docker</version>
  </parent>
  <description>Workflow for InSAR processing of Sentinel-1 TOPSAR (IW) Data with DIAPASON</description>
  <version>1.1.2</version>
  <properties>
    <summary>Workflow for InSAR processing of Sentinel-1 TOPSAR (IW) Data with DIAPASON</summary>
    <description>Workflow for InSAR processing of Stripmap Data with Diapasno</description>
    <community>geohazards-tep</community>
    <yumRepo>geohazards-tep</yumRepo>
  </properties>
  <scm>
    <connection>scm:git:ssh://git@github.com/geohazards-tep/dcs-insar-diapason-s1</connection>
    <developerConnection>scm:git:ssh://git@github.com/geohazards-tep/dcs-insar-diapason-s1</developerConnection>
    <url>https://github.com/geohazards-tep/dcs-insar-diapason-s1</url>
    <tag>HEAD</tag>
  </scm>
  <profiles>
    <profile>
      <id>package-app</id>
      <activation>
        <property>
          <name>env</name>
          <value>ci</value>
        </property>
      </activation>
      <build>
        <plugins>
          <plugin>
            <groupId>org.codehaus.mojo</groupId>
            <artifactId>rpm-maven-plugin</artifactId>
            <executions>
              <execution>
                <id>generate-rpm</id>
                <goals>
                  <goal>rpm</goal>
                </goals>
                <configuration>
                  <!-- Set here the dependencies installed with 'sudo yum install'-->
                  <requires>
                    <require>bash</require>
                    <require>bash</require>
                    <require>diapason</require>
                    <require>xmlstarlet</require>
                    <require>lftp</require>
                    <require>sqlite</require>
                    <require>jday</require>
                    <require>gdal</require>
                    <require>gdal-python</require>
                    <require>shapelib</require>
                    <require>perl-LockFile-Simple</require>
                    <require>perl-DateTime</require>
                    <require>perl-XML-LibXML</require>
                    <require>perl-DBI</require>
                    <require>perl-DBD-SQLite</require>
                    <require>gdalcrop</require>
                    <require>perl-DBD-SQLite</require>
                    <require>procmail</require>
                  </requires>
                </configuration>
              </execution>
            </executions>
          </plugin>
        </plugins>
      </build>
    </profile>
  </profiles>
</project>
