<?xml version="1.0" encoding="us-ascii"?>
<application xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:xsd="http://www.w3.org/2001/XMLSchema" id="my_application">
  <jobTemplates>
    <jobTemplate id="aux_swath">
      <streamingExecutable>/application/aux_swath/run.sh</streamingExecutable>
      <defaultParameters>
	<parameter id="pol">VV</parameter>
	<parameter id="slave" title="Sentinel-1 IW Slave" abstract="Define the InSAR Slave product. The product is passed by reference to catalogue entries"/>
      </defaultParameters>
      <defaultJobconf>       
	<property id="mapred.task.timeout">720000000</property>                      
      </defaultJobconf>
    </jobTemplate>
    <jobTemplate id="aux_burst">
      <streamingExecutable>/application/aux_burst/run.sh</streamingExecutable>
      <defaultJobconf>       
	<property id="mapred.task.timeout">720000000</property>                      
      </defaultJobconf>
    </jobTemplate>
    <jobTemplate id="coreg_burst">
      <streamingExecutable>/application/coreg/run.sh</streamingExecutable>
      <defaultJobconf>       
	<property id="mapred.task.timeout">720000000</property>                      
      </defaultJobconf>
    </jobTemplate>
    <jobTemplate id="interf">
      <streamingExecutable>/application/interf/run.sh</streamingExecutable>
      <defaultJobconf>       
	<property id="ciop.job.max.tasks">1</property>
        <property id="mapred.task.timeout">720000000</property>                      
      </defaultJobconf>
    </jobTemplate> 
  </jobTemplates>
    <workflow id="dcs-diapason-s1" title="Diapason InSAR Sentinel-1 TOPSAR(IW,EW)" abstract="Master and Slave images of Sentinel-1 SLC" >
    <workflowVersion>1.0</workflowVersion>
    <node id="node_swath">
      <job id="aux_swath"/>
      <sources>
	<source scope="runtime" id="master" title="Sentinel-1 IW master" abstract="Define the InSAR Master product" refid="string:list"></source>
      </sources>
      <parameters>
      <parameter id="slave" scope="runtime"></parameter>
      </parameters>
    </node>
    <node id="node_burst">
      <job id="aux_burst"/>
      <sources>
        <source refid="wf:node">node_swath</source>
      </sources>
    </node>
    <node id="node_coreg">
      <job id="coreg_burst" />
      <sources>
	<source refid="wf:node">node_burst</source>
      </sources>
    </node>
        <node id="node_interf">
      <job id="interf" />
      <sources>
	<source refid="wf:node">node_coreg</source>
      </sources>
    </node>
  </workflow>
</application>
